{
    "spellright.language": [
        "English (American)"
    ],
    "spellright.documentTypes": [
        "markdown",
        "latex",
        "plaintext"
    ],
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 90,
    "files.exclude": {
        "**/.empty": true,
        "**/.git*": true,
        "**/.sparkleshare": true,
        "**/*.apkg": true,
        "**/*.bib": true,
        "**/*.html": true,
        "**/*.js": true,
        "**/*.sh": true,
        "**/*.tex": true
    }
}